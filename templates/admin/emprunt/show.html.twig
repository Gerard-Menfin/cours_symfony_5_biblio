{% extends 'gestion.html.twig' %}

{% block title %}Emprunt{% endblock %}

{% block titre %}Fiche Emprunt{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ emprunt.id }}</td>
            </tr>
            <tr>
                <th>Date_emprunt</th>
                <td>{{ emprunt.dateEmprunt ? emprunt.dateEmprunt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_retour</th>
                <td>{{ emprunt.dateRetour ? emprunt.dateRetour|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_emprunt_index') }}" class="btn btn-warning">
<i class="fa fa-reply"></i> Retour liste
</a>

    <a href="{{ path('admin_emprunt_edit', {'id': emprunt.id}) }}" class="btn btn-primary"><i class="fa fa-edit"></i> Modifier</a>

	<span class="float-right">
	    {{ include('emprunt/_delete_form.html.twig') }}
	</span>
{% endblock %}
