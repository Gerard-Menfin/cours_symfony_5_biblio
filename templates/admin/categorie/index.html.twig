{% extends 'base_admin.html.twig' %}

{% block title %}Liste Categories{% endblock %}

{% block titre %}Liste des Categories{% endblock %}

{% block body %}

    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Mots</th>
                <th>Nb de livres</th>
                <th><i class="fa fa-tools"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.titre }}</td>
                <td>{{ categorie.mots }}</td>
                <td>{{ categorie.livres|length }}</td>
                <td>
                    <a href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Auncun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin/categorie_new') }}" class="btn btn-primary"> <i class="fa fa-plus"></i> Ajouter</a>
{% endblock %}
