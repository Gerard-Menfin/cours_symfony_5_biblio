{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <h1>Auteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ auteur.biographie }}</td>
            </tr>
            <tr>
                <th>Livres</th>
                <td>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <td>ID</td>
                                <td>Titre</td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for livre in auteur.livres %}
                                <tr>
                                    <td>{{ livre.id }} </td>
                                    <td>{{ livre.titre }} </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_auteur_index') }}">back to list</a>

    <a href="{{ path('admin_auteur_edit', {'id': auteur.id}) }}">edit</a>

    {{ include('admin/auteur/_delete_form.html.twig') }}
{% endblock %}
