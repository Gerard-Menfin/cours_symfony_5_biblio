{% extends 'base_admin.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block titre %}Auteur{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.identite }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ auteur.biographie }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ auteur.naissance ? auteur.naissance|date : "" }}</td>
            </tr>
            <tr>
                <th>Date de décès</th>
                <td>{{ auteur.deces ? auteur.deces|date : "" }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
