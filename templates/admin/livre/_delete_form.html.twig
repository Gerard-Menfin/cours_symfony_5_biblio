<form id="form_delete_livre{{ livre.id }}" method="post" action="{{ path('app_admin_livre_delete', {'id': livre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}">
    {% if icone is defined %}
        <i class="fa fa-trash text-danger" onclick="if(confirm('Are you sure you want to delete this item?')) form_delete_livre{{ livre.id }}.submit()" style="cursor: pointer"></i>
    {% else %}
        <button class="btn btn-danger"> <i class="fa fa-trash"></i> Supprimer </button>  
    {% endif %}
</form>
