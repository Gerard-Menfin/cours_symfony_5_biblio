{{ form_start(form) }}
    {# {{ (form) }} #}
    {{ form_error(form.roles) }}
    <div class="d-flex">
        {{ form_label(form.roles) }}
        {{ form_widget(form.roles,  { attr: { class: 'bg-secondary p-2 d-flex justify-content-between' } }) }}
    </div>
    
    {{ form_errors(form.pseudo) }}
    <div class="d-flex">
        {{ form_label(form.pseudo) }}
        {{ form_widget(form.pseudo, { attr: { class: 'bg-secondary' } }) }}
    </div>

    {{ form_errors(form.password) }}
    <div class="d-flex">
        {{ form_label(form.password) }}
        {{ form_widget(form.password, { attr: { class: 'bg-secondary', placeholder: "Mot de passe" } }) }}
    </div>
    
    
    <div class="d-flex">
        <label for="prenom">Identité</label>
        {{ form_widget(form.prenom, { attr: { class: 'bg-secondary', placeholder: "Prénom"  } }) }}
        {{ form_widget(form.nom,    { attr: { class: 'bg-secondary', placeholder: "Nom"     } }) }}
    </div>

    <button class="btn btn-primary"><i class="fa fa-save"></i> {{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
