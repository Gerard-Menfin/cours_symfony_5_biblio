{% extends 'base.html.twig' %}

{% block title %}Livres : liste {% endblock %}

{% block body %}
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <th>ID</th>
        <th>Titre</th>
        <th>Auteur</th>
        <th>Catégorie(s)</th>
        <th>Résumé</th>
        <th>Dispo</th>
        <th>Actions</th>
    </thead>

    <tbody>
        {% for livre in liste_livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.auteur }}</td>
                <td>
                    {# COURS : La variable 'loop' permet d'avoir des informations sur les itérations #}
                    
                    {% for genre in livre.genres %}
                        {{ genre.titre ~ (loop.last ? "" : ", ") }}
                    {% endfor %}                
                </td>
                <td>{{ livre.resume|slice(0, 10) }}...</td>
                <td>{{ livre.dispo ? "✔" : "❌" }}</td>
                <td>
                    <a href="{{ path("livre_fiche", { id: livre.id }) }}" class="btn btn-secondary">📘</a>
                    <a href="{{ path("livre_editer", { id: livre.id }) }}" class="btn btn-secondary">🖍</a>
                    <a href="{{ path("livre_supprimer", { id: livre.id }) }}" class="btn btn-danger"
                        onclick="return confirm('Confirmation de la suppression ?');" >🗑</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
