<div class="card ">
    <h4 class="card-header">{{ livre.titre }}</h4>

    <div class="row  couverture">
        <div class="col-4 d-flex align-items-center">
            <!-- <img class="card-img p-1 miniature" src="{{ chemin_couvertures ~ livre.couverture }}" alt="pas de couverture"> -->
            {{ livre.couverture|img("couvertures", "card-img p-1 miniature", "pas de couverture")|raw }}
        </div>

        <div class="col-8">
            <div class="card-body">
                <p class="card-text">De : {{ livre.auteur }}</p>
                <p class="card-text">Genre : {{ livre.toutescategories }}</p>
            </div>
        </div>
    </div>
    
    <div class="card-footer">
        <a href="{{ path("livre_fiche", {url: livre.url}) }}" class="card-link"> 
            <i class="fa fa-book"></i> Voir plus 
        </a>

        {# {% if is_granted("ROLE_LECTEUR") and livre not in liste_livres_indisponibles %}
            <a href="{{ path("lecteur_emprunter", {"id": livre.id}) }}" class="card-link btn btn-primary">
                Emprunter
            </a>
        {% endif %} #}
        {% if is_granted("ROLE_LECTEUR") and livre.dispo %}        
            <a href="{{ path("livre_emprunter", {"id": livre.id}) }}" class="card-link">
                <i class="fa fa-cart-arrow-down"></i> Emprunter
            </a>

        {% endif %}
        </div>
</div>