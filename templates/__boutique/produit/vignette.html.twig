<div class="col-4 my-2">
    <div class="card" style="margin-right: 0;margin-left: 0;">
        <div class="card-header">
            <img class="img-vignette card-img-top mx-auto" src=""
                alt="{{ produit.titre }}">
        </div>
        <div class="card-body">
            <h5 class="card-title">Nom : {{ produit.titre }}</h5>
            <p class="card-text">Prix : {{ produit.prix }} â‚¬</p>
            <p class="card-text">Stock : {{ produit.stock }}</p>
            
            <div class="card-footer">
                <form method="GET" action="{{ path("app_panier_ajouter", { id: produit.id }) }}" class="mt-2 form-inline" id="">
                    <div class="row m-0">
                        <a href="{{ path("app_produit_fiche", {id: produit.id}) }}" class="btn btn-primary col-12 col-md-3">Voir</a>
                        <div class="col-12 col-md-2"></div>
            
                        <div class="col-12 col-md-7 d-flex flex-row justify-content-between px-0">
                            <input type="number" name="quantite" value=1 min=1 max={{ produit.stock }} class="form-control col-7">
                            <button class="btn btn-info col-4">
                                <i class="fa fa-cart-plus"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>