{% extends 'base_admin.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <h1>Liste des Produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Categorie</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Couleur</th>
                <th>Public</th>
                <th>Photo</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Taille</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.reference }}</td>
                <td>{{ produit.categorie }}</td>
                <td>{{ produit.titre }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.couleur }}</td>
                <td>{{ produit.public }}</td>
                <td>
                    <img src="{{ asset(url_images_produits ~ produit.photo) }}" alt="{{ produit.titre }}" height=150>
                </td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.stock }}</td>
                <td>{{ produit.taille }}</td>
                <td>
                    <a href="{{ path('app_admin_produit_show', {'id': produit.id}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_produit_new') }}"><i class="fa fa-plus"></i> Ajouter</a>
{% endblock %}
