{% extends 'base_admin.html.twig' %}

{% block title %}Commande détaillée{% endblock %}

{% block body %}
    <h1>Commande détaillée</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ commande.client.email }}</td>
            </tr>

            <tr>
                <th>Montant</th>
                <td>{{ commande.montant }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ commande.date ? commande.date|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>État</th>
                <td>{{ commande.etat }}</td>
            </tr>

            <tr>
                <th>Détails</th>
                <td>
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Produit</th>
                                <th>Quantité</th>
                                <th>Prix</th>
                                <th>Total</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for detail in commande.details %}
                                <tr>
                                    <td>
                                        <a href="{{ path("app_admin_produit_show", {id: detail.produit.id}) }}">
                                            {{ detail.produit.reference }}
                                        </a>
                                        - {{ detail.produit.titre }}
                                    </td>
                                    <td>{{ detail.quantite }}                </td>
                                    <td>{{ detail.prix }} €                  </td>
                                    <td>{{ detail.quantite * detail.prix }} €</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot class="thead-dark">
                            <tr>
                                <th colspan="3">Total de la commande</th>
                                <td>{{ commande.montant }} €</td>
                            </tr>
                        </tfoot>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_admin_commande_index') }}" class="btn btn-secondary">Retour à la liste</a>

        <a href="{{ path('app_admin_commande_edit', {'id': commande.id}) }}" class="btn btn-primary">Modifier</a>
        
        {{ include('admin_commande/_delete_form.html.twig') }}
    </div>

    
{% endblock %}
