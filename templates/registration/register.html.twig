{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}

        <label for="">Identité</label>
        <div class="d-flex">
            {{ form_widget(registrationForm.prenom) }}
            {{ form_widget(registrationForm.nom, {
                attr: { placeholder: "Nom", class: "bg-warning" }  
            }) }}        
        </div>
        <div class="d-flex">
            {{ form_errors(registrationForm.prenom) }}
            {{ form_errors(registrationForm.nom) }}
        </div>
        {{ form_row(registrationForm.naissance) }}

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-user-plus"></i> S'inscrire
        </button>
    {{ form_end(registrationForm) }}
{% endblock %}

{% block titre %}Inscription à la bibliothèque{% endblock %}