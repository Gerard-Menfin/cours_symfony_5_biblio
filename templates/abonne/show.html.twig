{% extends 'gestion.html.twig' %}

{% block title %}Fiche Abonné{% endblock %}

{% block titre %}{{ block("title") }}{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonne.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ abonne.pseudo }}</td>
            </tr>
            <tr>
                <th>Accréditations</th>
                <td>{{ abonne.roles ? abonne.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ abonne.password }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ abonne.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ abonne.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('abonne_index') }}" class="btn btn-warning">
<i class="fa fa-reply"></i> Retour liste
</a>

    <a href="{{ path('abonne_edit', {'id': abonne.id}) }}" class="btn btn-primary"><i class="fa fa-edit"></i> Modifier</a>

	<span class="float-right">
	    {{ include('abonne/_delete_form.html.twig') }}
	</span>
{% endblock %}
